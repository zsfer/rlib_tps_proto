        {
            "type": "cppvsdbg",
            "request": "launch",
            "preLaunchTask": "Build Release",
            "name": "Run Release (Windows)",
            "program": "${workspaceFolder}/build/release/game_release.exe",
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        
        // Linux / Mac configs
        {
            "type": "lldb",
            "request": "launch",
            "preLaunchTask": "Build Hot Reload",
